<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<log4net>
		<root>
			<level value="DEBUG" />
		</root>
		
		<logger name="Radar">
			<appender-ref ref="RadarLog" />
		</logger>
		
		<appender name="RadarLog" type="log4net.Appender.RollingFileAppender">
			<file value=".\\Logs\\WRadar.log" />
			<appendToFile value="true" />
			<rollingStyle value="Size" />
			<maxSizeRollBackups value="10" />
			<staticLogFileName value="true" />
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%-5p %d [%thread] %M - %m%n" />
			</layout>
		</appender>	
	</log4net>
</configuration>
